<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Qcm">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Qcm_Activity"
        android:paddingLeft="50dp"
        android:textColor="#BD1919"
        android:textColorLink="#E82A2A"
        android:textSize="48sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/nom1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Une variable v est initialisée par :v=’2.0’. L’instructiontype(v)renverra :"
            android:textColor="#130F0F"
            android:textSize="20sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="5dp"
        android:orientation="horizontal">

        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="int"
                android:id="@+id/q11"
                android:checked="true"
                android:nestedScrollingEnabled="false"
                />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="float"
                android:id="@+id/q12"
                android:checked="false"
                android:nestedScrollingEnabled="false" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="str"
                android:id="@+id/q13"
                android:checked="false"
                android:nestedScrollingEnabled="false" />
        </RadioGroup>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/nom2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="On initialise une variable s pars=’gabuzomeu’ :"
            android:textColor="#130F0F"
            android:textSize="20sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="5dp"
        android:orientation="horizontal">

        <RadioGroup
            android:id="@+id/radioGroup2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="print(len(s))affichera 9."
                android:id="@+id/q21"
                android:checked="true"
                android:nestedScrollingEnabled="false"
                />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="print(len(s))affichera 10"
                android:id="@+id/q22"
                android:checked="false"
                android:nestedScrollingEnabled="false" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="print(len(s))affichera 8."
                android:id="@+id/q23"
                android:checked="false"
                android:nestedScrollingEnabled="false" />
        </RadioGroup>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/nom3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="On initialise une variable s pars=’gabuzomeu’"
            android:textColor="#130F0F"
            android:textSize="20sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="5dp"
        android:orientation="horizontal">

        <RadioGroup
            android:id="@+id/radioGroup3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="print(s[2])affichera ’a’."
                android:id="@+id/q31"
                android:checked="true"
                android:nestedScrollingEnabled="false"
                />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="print(s[2])affichera ’b’."
                android:id="@+id/q32"
                android:checked="false"
                android:nestedScrollingEnabled="false" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="print(s[2])affichera ’ga’."
                android:id="@+id/q33"
                android:checked="false"
                android:nestedScrollingEnabled="false" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="5dp"
        android:orientation="horizontal">
<!--
    <Button
        android:id="@+id/btn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:text="Cree" />
-->
    <Button
        android:id="@+id/service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginHorizontal="70dp"
        android:text="service"
        />
    </LinearLayout>
</LinearLayout>
</ScrollView>